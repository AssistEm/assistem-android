<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_color</item>
        <item name="colorAccent">@color/secondary_color</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="editTextColor">@color/text_color</item>
        <item name="android:textColorHint">@android:color/secondary_text_dark</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="colorControlNormal">@android:color/secondary_text_dark</item>
        <item name="colorControlActivated">@color/secondary_color</item>
        <item name="colorButtonNormal">@android:color/secondary_text_dark</item>
        <item name="colorSwitchThumbNormal">@android:color/secondary_text_dark</item>
        <item name="android:colorForeground">@android:color/secondary_text_dark</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropdownItemStyle</item>
        <item name="android:spinnerStyle">@style/Widget.AppCompat.Spinner.Underlined</item>
    </style>

    <style name="AppTheme.EditText" parent="AppTheme" >
        <item name="colorControlNormal">@android:color/secondary_text_dark</item>
        <item name="colorControlActivated">@color/secondary_color</item>
        <item name="colorSwitchThumbNormal">@android:color/secondary_text_dark</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropdownItemStyle</item>
    </style>

    <style name="AppTheme.Login" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="colorControlNormal">@color/color_control_normal</item>
        <item name="colorControlActivated">@color/secondary_color</item>
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_color</item>
        <item name="colorAccent">@color/secondary_color</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="editTextColor">@color/text_color</item>
        <item name="android:textColorHint">@android:color/secondary_text_dark</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

</resources>
