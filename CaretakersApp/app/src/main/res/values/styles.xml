<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_color</item>
        <item name="colorAccent">@color/secondary_color</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="editTextColor">@color/text_color</item>
        <item name="android:textColorHint">@android:color/secondary_text_dark</item>
    </style>

    <style name="AppTheme.EditText" parent="AppTheme" >
        <item name="colorControlNormal">@android:color/secondary_text_dark</item>
        <item name="colorControlActivated">@color/secondary_color</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropdownItemStyle</item>
    </style>

    <style name="AppTheme.Login" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="colorControlNormal">@color/color_control_normal</item>
        <item name="colorControlActivated">@color/secondary_color</item>
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_color</item>
        <item name="colorAccent">@color/secondary_color</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="editTextColor">@color/text_color</item>
        <item name="android:textColorHint">@android:color/secondary_text_dark</item>
    </style>

    <style name="SpinnerDropdownItemStyle">
        <item name="android:background">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="DateTimePickers" parent="BetterPickersDialogFragment.Light">
        <item name="bpKeyBackground">@drawable/picker_button_selector</item>
        <item name="bpButtonBackground">@drawable/picker_button_selector</item>
        <item name="bpDividerColor">@color/secondary_color</item>
        <item name="bpKeyboardIndicatorColor">@color/secondary_color</item>
    </style>

</resources>
